@* المسار: Views/Booking/Confirmation.cshtml *@
@model Final_project.Models.Appointments
@{
    Layout = "_FrontLayout";
    ViewData["Title"] = "تم تأكيد الحجز!";
}

<style>
    .confirmation-box {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin-top: 50px;
        border-right: 8px solid #00A693; /* لون عصري للتأكيد */
    }

    .confirmation-title {
        color: #00A693; /* لون أخضر عصري */
        font-weight: 700;
        margin-bottom: 25px;
    }

    .confirmation-box p {
        font-size: 17px;
        line-height: 2;
        color: #333;
        margin-bottom: 10px;
        border-bottom: 1px dashed #eee;
        padding-bottom: 5px;
    }

    .confirmation-box strong {
        color: #1E3A8A; /* لون أزرق لتمييز العناوين */
        display: inline-block;
        min-width: 150px;
    }

    .status-badge {
        display: inline-block;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 700;
        background-color: #f0ad4e;
        color: white;
    }
</style>

<div class="container">
    <div class="confirmation-box text-center mx-auto col-lg-8 col-md-10">

        <h2 class="confirmation-title mb-4">
            <i class="fas fa-check-circle me-2"></i>
            تم تأكيد حجزك بنجاح!
        </h2>

        <p class="text-muted">شكراً لك @TempData["PatientName"]، تم استلام طلب موعدك. نرجو مراجعة التفاصيل أدناه:</p>

        <hr class="mb-4">

        <div class="row text-start justify-content-center">
            <div class="col-md-6">
                <p><strong><i class="fas fa-user-tag me-2"></i> الاسم:</strong> @TempData["PatientName"]</p>

                <p>
                    <strong><i class="fas fa-calendar-alt me-2"></i> التاريخ:</strong>
                    <span class="badge bg-primary p-2">@TempData["AppointmentDate"]</span>
                </p>

                <p>
                    <strong><i class="fas fa-clock me-2"></i> الوقت:</strong>
                    <span class="badge bg-info text-dark p-2">@TempData["AppointmentTime"]</span>
                </p>

                <p><strong><i class="fas fa-user-md me-2"></i> الطبيب:</strong> @TempData["DoctorName"]</p>
            </div>

            <div class="col-md-6">
                <p>
                    <strong><i class="fas fa-tasks me-2"></i> الحالة:</strong>
                    <span class="status-badge">@TempData["AppointmentStatus"]</span>
                </p>

                <p><strong><i class="fas fa-money-bill-wave me-2"></i> طريقة الدفع:</strong> @TempData["PaymentMethod"]</p>

                <p><strong><i class="fas fa-syringe me-2"></i> الخدمات:</strong> @TempData["ServicesSummary"]</p>

                <p><strong><i class="fas fa-comment-dots me-2"></i> ملاحظاتك:</strong> @TempData["Notes"]</p>
            </div>
        </div>

        <hr class="mt-4">

        <p class="mt-4">ستتلقى رسالة بريد إلكتروني تحتوي على هذه التفاصيل قريباً.</p>

        <a asp-controller="User" asp-action="Profile" class="btn btn-primary mt-3 me-3" style="background-color: #1E3A8A; border-color: #1E3A8A;">
            <i class="fas fa-list-alt me-2"></i> عرض مواعيدي
        </a>

        <a asp-controller="Home" asp-action="HomePage" class="btn btn-secondary mt-3" style="background-color: #6c757d; border-color: #6c757d; color: white;">
            <i class="fas fa-home me-2"></i> العودة للرئيسية
        </a>
    </div>
</div>
@*  *@