@model Final_project.Data.ViewModels.RegisterVM
@{
    Layout = null;
    ViewData["Title"] = "إنشاء حساب جديد - عيادة الأسنان";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @* استدعاء Bootstrap CSS يدوياً *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @* استدعاء خط القاهرة (Cairo) *@
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;700&display=swap" rel="stylesheet">

    @* =================================================
       هنا نبدأ تنسيقات CSS المخصصة للصفحة
       ================================================= 
    *@
    <style>
        /* ----------------------------------- */
        /* General Styles - Retain Dark Background */
        /* ----------------------------------- */
        body {
            font-family: 'Cairo', sans-serif;
            background: linear-gradient(135deg, #001730, #002d5b); /* أزرق بحري داكن */
            background-attachment: fixed;
            color: #fff;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
            margin: 0;
        }

        .register-page {
            min-height: 100vh;
            background-image: url('https://www.transparenttextures.com/patterns/symphony.png');
            background-size: cover;
            background-blend-mode: overlay;
            padding: 40px 0; /* مساحة علوية وسفلية للمحتوى الطويل */
            /* جعل المحتوى قابلاً للتمرير إذا أصبح أطول من الشاشة */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* ----------------------------------- */
        /* Card Styles - White Background Adjustment */
        /* ----------------------------------- */
        .register-card {
            background-color: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(8px);
            border: 1px solid rgba(0, 0, 0, 0.1);
            border-radius: 25px; /* حواف أكثر نعومة */
            padding: 3rem; /* زيادة المسافة الداخلية */
            width: 100%;
            max-width: 500px; /* زيادة العرض لاستيعاب حقول أكثر */
            color: #001730;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

        .register-title {
            color: #002d5b;
            font-weight: 700;
            margin-bottom: 2.5rem !important;
        }

        /* ----------------------------------- */
        /* Form Control Styles - Adjusted for White Card */
        /* ----------------------------------- */
        .form-group label {
            display: block;
            margin-bottom: 0.6rem;
            font-weight: 600;
            color: #1a1a1a;
            text-align: right;
        }

        /* تطبيق التنسيق على حقول الإدخال والقوائم المنسدلة */
        .form-control, select.form-control {
            background-color: rgba(0, 0, 0, 0.06);
            border: 1px solid rgba(0, 0, 0, 0.15);
            color: #001730;
            border-radius: 15px;
            padding: 1rem 1.25rem;
            transition: all 0.4s ease;
            height: auto;
            font-size: 1rem;
        }

            .form-control::placeholder {
                color: #888;
                opacity: 1;
            }

            .form-control:focus {
                background-color: #fff;
                border: 1px solid #ffc300;
                box-shadow: 0 0 0 4px rgba(255, 195, 0, 0.4);
                outline: none;
            }

        /* ----------------------------------- */
        /* Button & Validation Styles */
        /* ----------------------------------- */
        .register-btn {
            background-color: #ffc300;
            color: #001730;
            font-weight: 700;
            border: none;
            border-radius: 15px;
            padding: 1rem;
            transition: all 0.3s ease;
            letter-spacing: 1px;
        }

            .register-btn:hover {
                background-color: #ffdd67;
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(255, 195, 0, 0.5);
            }

        .validation-message {
            display: block;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            text-align: right;
            font-weight: 500;
            color: #dc3545 !important;
        }

        /* New Link Style */
        .login-link {
            color: #002d5b;
            text-decoration: none;
            font-weight: 700;
            transition: color 0.3s;
        }

            .login-link:hover {
                color: #ffc300;
                text-decoration: underline;
            }

        /* Alerts */
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border-color: #c3e6cb;
            border-radius: 10px;
            padding: 1rem;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
            border-radius: 10px;
            padding: 1rem;
        }

        /* ----------------------------------- */
        /* Media Query */
        /* ----------------------------------- */
        @@media (max-width: 768px) {
            .register-card {
                padding: 2rem;
                margin: 30px 20px;
                max-width: 90%;
            }
        }
    </style>
</head>
<body>

    <div class="register-page d-flex align-items-center justify-content-center">
        <div class="card register-card shadow-lg">

            <h3 class="text-center register-title mb-4"> إنشاء حساب جديد </h3>

            <form asp-action="Register" method="post">
                @* === لا تنسَ إضافة Anti-Forgery Token للأمان === *@
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="FullName">الاسم الكامل</label>
                    <input asp-for="FullName" class="form-control" placeholder="أدخل اسمك الكامل" />
                    <span asp-validation-for="FullName" class="text-danger validation-message"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Gender">النوع</label>
                    <select asp-for="Gender" class="form-control">
                        <option value="">اختر النوع</option>
                        <option value="ذكر">ذكر</option>
                        <option value="أنثى">أنثى</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger validation-message"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone">رقم الهاتف</label>
                    <input asp-for="Phone" class="form-control" placeholder="مثال: 010xxxxxxxxx" />
                    <span asp-validation-for="Phone" class="text-danger validation-message"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address">العنوان</label>
                    <input asp-for="Address" class="form-control" placeholder="أدخل عنوانك بالتفصيل" />
                    <span asp-validation-for="Address" class="text-danger validation-message"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email">البريد الإلكتروني</label>
                    <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                    <span asp-validation-for="Email" class="text-danger validation-message"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password">كلمة المرور</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="كلمة مرور (6 أحرف على الأقل)" />
                    <span asp-validation-for="Password" class="text-danger validation-message"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword">تأكيد كلمة المرور</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="أعد إدخال كلمة المرور" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger validation-message"></span>
                </div>

                <button type="submit" class="btn register-btn w-100">تسجيل</button>
            </form>

            <div class="text-center mt-4">
                <a href="/Account/Login" class="login-link"> لديك حساب بالفعل؟ تسجيل الدخول</a>
            </div>


            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-3 text-center">@TempData["Message"]</div>
            }

        </div>
    </div>

    @*
   استدعاء ملفات JavaScript الأساسية في نهاية الصفحة لضمان عمل التحقق من الصحة (Validation)
*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>