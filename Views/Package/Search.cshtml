@model List<Final_project.Models.Package>

@{
    ViewData["Title"] = "Search Packages";
    Layout = "_Layout";
}

<h2 style="color:#003366;">Search Packages by Name</h2>

<form method="post" class="mb-4">
    <div class="input-group">
        <input type="text"
               name="name"
               class="form-control"
               placeholder="Enter package name..."
               value="@ViewBag.SearchTerm"
               required />

        <button type="submit"
                class="btn"
                style="background-color:#003366; color:white;">
            Search
        </button>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@if (Model != null && Model.Any())
{
    <h4 style="color:#003366;">Results for: "@ViewBag.SearchTerm"</h4>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Package Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var pkg in Model)
            {
                <tr>
                    <td>@pkg.Package_ID</td>
                    <td>@pkg.Name</td>
                    <td>@pkg.Price جنيه</td>

                    <td>
                        <a asp-action="Details"
                           asp-route-id="@pkg.Package_ID"
                           class="btn btn-info btn-sm">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Dashboard"
   class="btn"
   style="border:2px solid #003366; color:#003366; background-color:white;">
    Back to All Packages
</a>

<style>
    .table {
        border-radius: 10px;
        overflow: hidden;
        background-color: white;
    }

        .table thead th {
            background-color: #003366 !important;
            color: #ffffff;
            text-align: center;
        }

        .table tbody tr:hover {
            background-color: #e0f7fa !important;
            transition: background-color 0.3s ease;
        }

    .btn-info {
        background-color: white;
        border: 2px solid #003366;
        color: #003366;
        transition: all 0.3s ease;
    }

        .btn-info:hover {
            background-color: #4dd0e1;
            color: white;
        }
</style>