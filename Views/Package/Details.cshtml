@model Final_project.Models.Package

@{
    ViewData["Title"] = "Package Details";
    Layout = "_Layout";
}

<div class="card shadow-lg border-0 p-4" style="border-top: 4px solid #003366;">

    <h3 class="fw-bold" style="color:#003366;">@Model.Name</h3>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="~/uploads/packages/@Model.ImagePath"
             width="200"
             class="mb-3 rounded shadow" />
    }
    else
    {
        <p class="text-muted">No Image Available</p>
    }

    <p>
        <strong style="color:#003366;">Description:</strong>
        @Model.Description
    </p>

    <p>
        <strong style="color:#003366;">Price:</strong>
        @Model.Price جنيه
    </p>

    <a asp-action="Dashboard"
       class="btn"
       style="border:2px solid #003366; background-color:#003366; color:white;">
        Back
    </a>

</div>