@model IEnumerable<Final_project.Models.Staff>
@{
    ViewBag.Title = "Manage Staff";
    Layout = "_Layout";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="d-flex justify-content-between align-items-center mb-4">

    <a asp-controller="Staff" asp-action="Create" class="btn btn-success px-4">
        <i class="fas fa-plus-circle me-1"></i> Add New Staff
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive shadow-sm rounded-3 overflow-hidden">
        <table class="styled-table table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Role</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var staff in Model)
                {
                    <tr>
                        <td class="fw-bold text-muted">#@staff.Staff_ID</td>
                        <td>@staff.Name</td>
                        <td>@staff.Phone</td>
                        <td>@staff.Address</td>
                        <td>
                            <span class="badge bg-primary">@staff.Role</span>
                        </td>
                        <td class="action-buttons">
                            <a asp-action="Details" asp-route-id="@staff.Staff_ID" class="icon-btn info">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@staff.Staff_ID" class="icon-btn edit">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@staff.Staff_ID" method="post" class="d-inline">
                                <button type="submit" class="icon-btn delete"
                                        onclick="return confirm('Are you sure you want to delete this staff?');">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                                @Html.AntiForgeryToken()
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-user-tie display-1 text-muted mb-3"></i>
        <h4 class="text-muted">No staff found.</h4>
        <p class="text-muted">Start by adding a new staff member.</p>
        <a asp-action="Create" class="btn btn-primary mt-2">Add Staff</a>
    </div>
}

<style>
    .styled-table {
        min-width: 800px;
        background: #fff;
    }

        .styled-table thead th {
            font-weight: 600;
            color: #495057;
            padding: 1rem;
        }

        /* 💡 تم إزالة محاذاة الوسط من جميع الأعمدة وجعلها محاذاة يسار لـ Role */
        .styled-table tbody td {
            padding: 1rem;
            vertical-align: middle;
            text-align: left; /* محاذاة لليسار */
        }

            .styled-table tbody td:last-child {
                text-align: center; /* محاذاة الوسط لأزرار الإجراءات فقط */
            }

        .styled-table tbody tr:nth-child(odd) {
            background-color: #fafafa;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #f0f4f8;
        }

        .styled-table tbody tr:hover {
            background-color: #e3f2fd !important;
        }

    /* ===== Action Buttons ===== */
    .action-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .icon-btn {
        width: 32px;
        height: 32px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 6px;
        font-size: 15px;
        cursor: pointer;
        transition: .2s;
        border: none;
    }

        .icon-btn.info {
            background: #e3f2fd;
            color: #1e88e5;
        }

            .icon-btn.info:hover {
                background: #bbdefb;
            }

        .icon-btn.edit {
            background: #fff8e1;
            color: #ffb300;
        }

            .icon-btn.edit:hover {
                background: #ffe082;
            }

        .icon-btn.delete {
            background: #ffebee;
            color: #e53935;
        }

            .icon-btn.delete:hover {
                background-color: #ffcdd2;
            }

    /* ===== Alerts and Buttons styling remains the same ===== */
    .alert-success {
        background-color: #e0f2f1;
        border-color: #b2dfdb;
        color: #004d40;
    }

    .alert-info {
        background-color: #e1f5fe;
        border-color: #81d4fa;
        color: #01579b;
    }

    .btn-success {
        background-color: #00bfa5;
        border: none;
        color: white;
        font-weight: 600;
    }

        .btn-success:hover {
            background-color: #00796b;
        }

    /* ===== Responsive ===== */
    @@media (max-width: 768px) {
        .styled-table {
            min-width: 100%;
        }

        .action-buttons {
            flex-wrap: wrap;
        }
    }
</style>