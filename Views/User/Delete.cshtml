@model Final_project.Models.User

<h2 class="text-danger">Delete User</h2>

<p>Are you sure you want to delete this user?</p>

<div class="card mt-3" style="max-width: 600px;">
    <div class="card-body">
        <h4>@Model.FullName</h4>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
    </div>
</div>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.User_ID">
    <button class="btn btn-danger mt-3">Delete</button>
    <a href="/User/Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
